old-dtb := $(dtb-y)
old-dtbo := $(dtbo-y)
dtb-y :=
dtbo-y :=
makefile-path := platform/t23x/apollo/kernel-dts

BUILD_ENABLE=n
ifneq ($(filter y,$(CONFIG_ARCH_TEGRA_23x_SOC)),)
BUILD_ENABLE=y
endif

# Apollo DTBs
dtb-$(BUILD_ENABLE) += tegra234-p3767-apollo-evt.dtb

# P3768 & P3509 DTBs
dtb-$(BUILD_ENABLE) += tegra234-p3767-0000-p3509-a02.dtb
dtbo-$(BUILD_ENABLE) += tegra234-p3767-0000-p3509-a02-csi.dtbo
dtbo-$(BUILD_ENABLE) += tegra234-p3767-apollo-audio.dtbo
dtbo-$(BUILD_ENABLE) += tegra234-p3767-0000-p3509-a02-m2ke.dtbo

ifneq ($(dtb-y),)
dtb-y := $(addprefix $(makefile-path)/,$(dtb-y))
endif
ifneq ($(dtbo-y),)
dtbo-y := $(addprefix $(makefile-path)/,$(dtbo-y))
endif

dtb-y += $(old-dtb)
dtbo-y += $(old-dtbo)
